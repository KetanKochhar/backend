        }

        .contact-info a {
            color: #2a6ebb;
            text-decoration: none;
        }

        .contact-info a:hover {
            text-decoration: underline;
        }

        .emoji {
            transition: transform 2.5s ease;
        }

        .emoji:hover {
            transform: scale(1.1);
        }


        @media (max-width: 600px) {
            .container {
                padding: 20px;
            }

            .contact-info strong {
                width: 100px;
            }
        }

