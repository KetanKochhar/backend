<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>All Orders</title>
    <!-- Fabric.js CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.3.0/fabric.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 40px;
        }

        th,
        td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        .design-table {
            margin-top: 10px;
            margin-left: 20px;
            width: 95%;
            background-color: #f9f9f9;
        }

        .design-heading {
            font-size: 1.1em;
            margin: 10px 0 5px 0;
            color: #444;
        }

        .design-table th {
            background-color: #e9f0ff;
        }
    </style>
</head>

<body>
    <h1>Order Management</h1>

    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Design</th>
                <th>Quantity</th>
                <th>Size</th>
                <th>Customer Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Payment</th>
                <th>Total</th>
                <th>Status</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order=> { %>
                <tr>
                    <td>
                        <%= order.order_id %>
                    </td>
                    <td>
                        <%= order.user_id %>
                    </td>
                    <td>
                        <%= order.design_name || 'N/A' %> (<%= order.design_type || 'N/A' %>)
                    </td>
                    <td>
                        <%= order.quantity %>
                    </td>
                    <td>
                        <%= order.size %>
                    </td>
                    <td>
                        <%= order.customer_name %>
                    </td>
                    <td>
                        <%= order.shipping_address %>, <%= order.city %> - <%= order.pincode %>
                    </td>
                    <td>
                        <%= order.phone_number %>
                    </td>
                    <td>
                        <%= order.email %>
                    </td>
                    <td>
                        <%= order.payment_method %>
                    </td>
                    <td>₹<%= order.total_price.toFixed(2) %>
                    </td>
                    <td>
                        <%= order.status %>
                    </td>
                    <td>
                        <%= new Date(order.order_created_at).toLocaleString() %>
                    </td>
                </tr>

                <!-- Design Table Below Each Order -->
                <tr>
                    <td colspan="13">
                        <div class="design-heading">Design Details for "<%= order.design_name %>"</div>
                        <table class="design-table">
                            <thead>
                                <tr>
                                    <th>Design ID</th>
                                    <th>Type</th>
                                    <th>Color</th>
                                    <th>Front JSON</th>
                                    <th>Back JSON</th>
                                    <th>Price</th>
                                    <th>Created At</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= order.design_id %>
                                    </td>
                                    <td>
                                        <%= order.design_type %>
                                    </td>
                                    <td>
                                        <%= order.design_color %>
                                    </td>
                                    <td>
                                        <%= order.front_canvas_json ? 'Available' : 'N/A' %>
                                    </td>
                                    <td>
                                        <%= order.back_canvas_json ? 'Available' : 'N/A' %>
                                    </td>
                                    <td>₹<%= order.design_price %>
                                    </td>
                                    <td>
                                        <%= new Date(order.design_created_at).toLocaleString() %>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                <p>Front Canvas Object Count: <%= order.frontObjectCount %>
                </p>

                <img src="<%= order.frontPreview%>" style="width: 520px;" />
                <% order.usedgraphics.forEach(src=> { %>
                    <img src="<%= src %>" style="max-width: 100px; margin-right: 10px;" />
                    <% }) %>
                        <p>Size Labels: <%= order.sizeLabels.join(', ') || ' None' %>
                        </p>

                        <img src="<%= order.backPreview%>" style="width: 520px;" />
                        <pre style="display: none;"><%= JSON.stringify(order.frontimages, null, 2) %></pre>


                        <% }) %>
        </tbody>
    </table>
</body>

</html>