        <span class="close-btn" onclick="closePanel('colorPanel')">X</span>
      </div>
      <h1><% colors %></h1>
      <% if (colors && colors.length > 0) { %>
        <% colors.forEach(color => { %>
            <div class="color-option <%= color.name === 'White' ? 'selected' : '' %>" data-color="<%= color.color %>" data-color1="<%= color.dark_color %>">
                <div class="left-side">
                    <div class="circle" style="background-color: <%= color.color %>;"></div>
                    <span class="color-name"><%= color.name %></span>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>No colors available.</p>
    <% } %>
    </div>


