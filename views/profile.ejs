<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<%- include('partials/nav', { user: user }) %>
<body class="bg-gray-100 min-h-screen flex flex-col items-center p-6 sm:p-10">

    <section class="flex flex-col sm:flex-row items-center space-y-6 sm:space-y-0 sm:space-x-8 bg-white rounded-xl shadow-lg p-8 w-full max-w-5xl mb-12">
        <% const firstName = username ? username.split(' ')[0] : ''; const initial = firstName ? firstName.charAt(0).toUpperCase() : '?'; %>
        <div class="w-32 h-32 rounded-full bg-gradient-to-br from-blue-500 to-blue-700 flex items-center justify-center shadow-xl select-none flex-shrink-0">
            <span class="text-white text-6xl font-extrabold tracking-tight"><%= initial %></span>
        </div>
        <h1 class="text-5xl font-extrabold text-gray-900 leading-tight">Welcome, <span class="text-blue-600"><%= firstName %></span>!</h1>
    </section>

    <div class="w-full max-w-5xl mb-12">
        <div class="bg-white rounded-xl shadow-lg p-8">
            <% if (!address || address.length === 0) { %>
                <div class="flex flex-col items-center justify-center py-8">
                    <p class="text-lg text-gray-600 mb-6">It looks like you haven't added your address yet.</p>
                    <button id="openModalBtn" class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition duration-300 ease-in-out transform hover:-translate-y-1 shadow-md">
                        Add Your Address
                    </button>
                </div>
            <% } else { %>
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Your Current Address</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700 text-lg">
                    <p><strong>Address:</strong> <span id="address" class="font-medium"><%= address[0].address %></span></p>
                    <p><strong>Pincode:</strong> <span id="pincode" class="font-medium"><%= address[0].pincode %></span></p>
                    <p><strong>City:</strong> <span id="city" class="font-medium"><%= address[0].city %></span></p>
                    <p><strong>Area:</strong> <span id="area" class="font-medium"><%= address[0].area %></span></p>
                </div>
                <div class="mt-8 flex justify-end">
                    <button id="openUpdateBtn" class="bg-green-600 text-white px-8 py-3 rounded-lg hover:bg-green-700 transition duration-300 ease-in-out transform hover:-translate-y-1 shadow-md">
                        Update Address
                    </button>
                </div>
            <% } %>
        </div>
    </div>

    <div id="addressModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-60 z-50 hidden p-4">
        <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-lg transform transition-all duration-300 scale-95 opacity-0" id="modalContent">
            <h3 id="userid" class="hidden"><%= userid %></h3>
            <h3 class="text-2xl font-bold mb-6 text-gray-800" id="modalTitle">Enter Your Address</h3>
            <form id="addressForm">
                <div class="mb-5">
                    <label for="userAddress" class="block mb-2 text-md font-medium text-gray-700">Address</label>
                    <textarea id="userAddress" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 resize-none" rows="4" placeholder="Street, Building, Apartment No..."></textarea>
                </div>

                <div class="mb-5">
                    <label for="userPincode" class="block mb-2 text-md font-medium text-gray-700">Pincode</label>
                    <input type="text" id="userPincode" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" maxlength="6" placeholder="Enter 6-digit pincode"/>
                    <p id="loadingPincodeStatus" class="text-sm text-gray-500 mt-2 hidden">Fetching location...</p>
                </div>

                <div class="mb-5">
                    <label for="userCity" class="block mb-2 text-md font-medium text-gray-700">City</label>
                    <input type="text" id="userCity" class="w-full p-3 bg-gray-100 border border-gray-300 rounded-lg cursor-not-allowed" readonly/>
                </div>

                <div class="mb-6">
                    <label for="userArea" class="block mb-2 text-md font-medium text-gray-700">Area</label>
                    <input type="text" id="userArea" class="w-full p-3 bg-gray-100 border border-gray-300 rounded-lg cursor-not-allowed" readonly/>
                </div>

                <div class="mt-6 flex justify-end space-x-4">
                    <button type="button" id="closeModalBtn" class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition duration-300 ease-in-out">Cancel</button>
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300 ease-in-out shadow-md">Save Address</button>
                </div>
            </form>
        </div>
    </div>

    <h2 class="text-4xl font-bold text-gray-800 mb-10 mt-6 w-full max-w-5xl text-center sm:text-left">Your Designs</h2>
    
    <div class="w-full max-w-5xl mb-6 flex justify-end">
      <a href="/cart" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-300 ease-in-out transform hover:-translate-y-1 shadow-md">
          View Cart
      </a>
  </div>
    <div class="w-full max-w-5xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% for (let i = 0; i < id.length; i++) { %>
            <section class="bg-white rounded-xl shadow-lg p-6 cursor-pointer transform hover:scale-105 transition duration-300 ease-in-out flex flex-col"
                     onclick="GoToRedesign('<%= id[i] %>', '<%= type[i] %>', '<%= name[i] %>', '500', '<%= fcjp[i] %>')">
                <div class="mb-4">
                    <h3 class="text-lg font-semibold text-gray-600">Design ID: <span class="text-gray-800"><%= id[i] %></span></h3>
                    <h3 class="text-lg font-semibold text-gray-600">Type: <span class="text-gray-800"><%= type[i] %></span></h3>
                    <h3 class="text-lg font-semibold text-gray-600">Price: <span id="price" class="text-green-600 font-bold"><%= price[i] %></span></h3>
                </div>
                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex-grow"><%= name[i] %></h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
                    <img src="<%= fcjp[i] %>" alt="Design Image 1" class="w-full h-48 object-cover rounded-lg shadow-md" />
                    <img src="<%= bcjp[i] %>" alt="Design Image 2" class="w-full h-48 object-cover rounded-lg shadow-md" />
                </div>
                <button class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-300 ease-in-out mt-auto shadow-md">Add To Cart</button>
            </section>
        <% } %>
    </div>

    <script src="/JS/profile.js"></script>
    <script>
        // Modal Animation
        const addressModal = document.getElementById('addressModal');
        const modalContent = document.getElementById('modalContent');
        const openModalBtn = document.getElementById('openModalBtn');
        const openUpdateBtn = document.getElementById('openUpdateBtn');
        const closeModalBtn = document.getElementById('closeModalBtn');

        function openModal() {
            addressModal.classList.remove('hidden');
            setTimeout(() => {
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 50);
        }

        function closeModal() {
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                addressModal.classList.add('hidden');
            }, 300); // Match this duration with the transition duration
        }

        if (openModalBtn) {
            openModalBtn.addEventListener('click', openModal);
        }
        if (openUpdateBtn) {
            openUpdateBtn.addEventListener('click', openModal);
        }
        closeModalBtn.addEventListener('click', closeModal);
        addressModal.addEventListener('click', (e) => {
            if (e.target === addressModal) {
                closeModal();
            }
        });
    </script>
</body>
<%- include('partials/footer', { user: user }) %>
</html>